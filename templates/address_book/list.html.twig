{% extends 'base.html.twig' %}

{% block title %}Book Overview{% endblock %}

{% block container %}
    <div class="container">
        {% include 'flash_messages.html.twig' %}
        <div class="panel-heading">
            <div class="row">
                <div class="col col-xs-6">
                    <h3>Address Book Overview</h3>
                </div>
                <div class="col col-xs-6 text-right">
                    <a class="btn btn-sm btn-primary btn-create" href="{{ path('address_create') }}">
                        Create Address
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="table-light">
            <tr>
                <th scope="col">Picture</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Birthday</th>
                <th scope="col">Street & Number</th>
                <th scope="col">Zip</th>
                <th scope="col">City</th>
                <th scope="col">Country</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
            </thead>
            <tbody>
            {% if addresses|length > 0%}
                {% for address in addresses %}
                    <tr>
                        <td>
                            {% if address.picture != '' %}
                                <img class="img-thumbnail address-picture" src="{{ asset('uploads/' ~ address.picture) }}">
                            {% else %}
                                <img class="img-thumbnail address-picture" src="{{ asset('uploads/default.png') }}">
                            {% endif %}
                        </td>
                        <td>{{ address.firstName }}</td>
                        <td>{{ address.lastName }}</td>
                        <td>{{ address.email }}</td>
                        <td>{{ address.phoneNumber }}</td>
                        <td>{{ address.birthDay }}</td>
                        <td>{{ address.streetNumber }}</td>
                        <td>{{ address.zip }}</td>
                        <td>{{ address.city }}</td>
                        <td>{{ address.country }}</td>
                        <td>
                            <a class="btn btn-default" href="{{ path('address_update', {id: address.id}) }}">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-danger" href="{{ path('address_delete', {id: address.id}) }}">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="12">No results found</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
        {% include 'pagination.html.twig' %}
    </div>
{% endblock %}
